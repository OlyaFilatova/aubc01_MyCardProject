<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miymayster.mycardproject.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/marko"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/clock"
        android:alpha="0.89"
        android:rotation="10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time to wake up, man!"
        android:textColor="#f0666666"
        android:background="#77ffffff"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:id="@+id/wake_up_tv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's 6:30"
        android:textColor="#f0666666"
        android:background="#77ffffff"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:layout_below="@id/wake_up_tv"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="close"
            android:layout_weight="1"
            android:background="#77ffffff"
            android:textColor="#bb000000"
            android:layout_marginRight="1dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="wait 5 min"
            android:layout_weight="1"
            android:background="#77ffffff"
            android:textColor="#bb000000"/>
    </LinearLayout>
</RelativeLayout>
